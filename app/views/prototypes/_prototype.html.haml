.col-sm-4.col-md-3.proto-content
  .dropdown.drop_menu_location
    %button#dropdownMenuButton.btn.btn-default.btn-secondary.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
      action
    %ul.dropdown-menu{"aria-labelledby" => "dropdownMenuButton"}
      %li
      = link_to "詳細", prototype_path(prototype.id), method: :get, class: "dropdown-item"
      %li
      = link_to '編集', "/prototypes/#{prototype.id}/edit", method: :get, class: "dropdown-item" if user_signed_in? && current_user.id == prototype.user_id
      %li
      = link_to '削除', "/prototypes/#{prototype.id}", method: :delete, class: "dropdown-item" if user_signed_in? && current_user.id == prototype.user_id
  .thumbnail
    = link_to image_tag(prototype.set_main_thumbnail), prototype_path(prototype)
    .caption
      %h3
        = prototype.title
      .proto-meta
        .proto-user
          = link_to prototype.user.name, user_path(prototype.user)
        .proto-posted
          = prototype.posted_date
